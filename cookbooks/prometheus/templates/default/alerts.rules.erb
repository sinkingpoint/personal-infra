groups:
- name: alerts
  rules:
  - alert: Node_Down
    expr: sum(up{job="node"}) by (name) == 0
    for: 1m
    annotations:
      summary: {{$labels.name}} is down
  - alert: Last_Backup_Too_Old
    expr: time() - last_backup > 24 * 60 * 60
    for: 1h
    annotations:
      summary: {{$labels.exported_job}} has not been backed up in 24h