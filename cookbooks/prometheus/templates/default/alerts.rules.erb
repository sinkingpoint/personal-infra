groups:
- name: alerts
  rules:
  - alert: Node_Down
    expr: sum(up{job="node"}) by (name) == 0
    for: 1m
    annotations:
      summary: "{{$labels.name}} is down"
  - alert: Container_Down
    expr: container_up == 0
    for: 1m
    annotations:
      summary: "Container {{$labels.name}} is down on {{$labels.instance}}"
