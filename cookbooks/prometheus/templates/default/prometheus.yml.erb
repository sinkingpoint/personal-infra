global:
  scrape_interval: 5s
  evaluation_interval: 1s

alerting:
  alertmanagers:
    - static_configs:
      - targets:
        - alertmanager.in.sinkingpoint.com:9090

scrape_configs:
  - job_name: 'node'
    ec2_sd_configs:
      - region: eu-west-2
        port: 9100
    relabel_configs:
      - source_labels:
          - '__meta_ec2_tag_Name'
        target_label: name
        action: replace
      - source_labels:
          - '__meta_ec2_instance_state'
        target_label: state
        action: replace
  - job_name: 'utilities'
    metrics_path: '/'
    static_configs:
      - targets:
        - <%= @exporter_listen_ip %>:8000
